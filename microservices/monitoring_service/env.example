# Monitoring Service Environment Configuration
# =============================================

# Application Configuration
APP_NAME="Monitoring Service"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8004

# Database Configuration
# Using MySQL as recommended in the README
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=monitoring_service
DB_USERNAME=root
DB_PASSWORD=

# Cache Configuration
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Mail Configuration (for notifications)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="monitoring@gsm.gov.ph"
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Service Integration URLs
# These should match the other services in your microservices architecture
AUTH_SERVICE_URL=http://localhost:8001
SCHOLARSHIP_SERVICE_URL=http://localhost:8002
AID_SERVICE_URL=http://localhost:8003

# JWT Configuration for service-to-service authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_PUBLIC_KEY=your_jwt_public_key_here

# Monitoring Specific Configuration
MONITORING_INTERVAL=300  # 5 minutes in seconds
REPORT_GENERATION_ENABLED=true
DASHBOARD_REFRESH_INTERVAL=60  # 1 minute in seconds

# File Storage for Reports
REPORTS_STORAGE_PATH=storage/app/reports
MAX_REPORT_SIZE=10485760  # 10MB in bytes

# Notification Settings
NOTIFICATIONS_ENABLED=true
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=true

# Development Settings
TELESCOPE_ENABLED=false
DEBUG_BAR_ENABLED=false
